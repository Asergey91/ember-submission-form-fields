<AuLabel class="{{if this.errors "au-c-label--error"}}">
  {{@field.label}}
  {{#if this.isRequired}}
    <AuPill>Verplicht</AuPill>
  {{/if}}
</AuLabel>
{{#each this.files as |file|}}
  <VoMuFileCard @file={{file}} @active={{false}}/>
{{/each}}

{{#unless this.files}}
  <AuHelpText>Er werden geen bestanden toegevoegd.</AuHelpText>
{{/unless}}
