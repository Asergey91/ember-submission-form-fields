<AuLabel class="{{if this.errors "au-c-label--error"}}">
  {{@field.label}}
  {{#if this.isRequired}}
    <AuPill>Verplicht</AuPill>
  {{/if}}
</AuLabel>
{{#each this.files as |fileField|}}
  <VoMuFileCard @file={{fileField.record}} @onDelete={{this.removeFile}}/>
{{/each}}
<VoMuFileDropzone @onFinishUpload={{this.addFile}} @maxFileSizeMB="1024" class="{{if this.errors "upload--error"}}" />


{{#each this.errors as |error|}}
  <AuHelpText @error={{"error"}}>{{error.resultMessage}}</AuHelpText>
{{/each}}
