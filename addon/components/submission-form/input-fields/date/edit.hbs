<AuLabel class="{{if this.errors "au-c-label--error"}}" for={{this.inputId}}>
  {{@field.label}}
  {{#if this.isRequired}}
    <AuPill>Verplicht</AuPill>
  {{/if}}
</AuLabel> {{!-- setting ID's (to link the label to the input field) does not work with the datepicker plugin --}}
<div class="au-o-grid au-o-grid--flush">
  <div class="au-o-grid__item au-u-3-4">
    <WuDatepicker
            class="au-c-date-picker-container {{if this.errors "au-c-date-picker-container--error"}}"
            id="{{this.inputId}}"
            @width={{"block"}}
            @tagName="div"
            @dateFormat="DD.MM.YYYY"
            @onChange={{this.updateValue}}
            @value={{this.value}}
    />
  </div>
</div>

<AuHelpText class="{{if this.errors "au-c-help-text--error"}}">Datum formaat: DD.MM.JJJJ</AuHelpText>
{{#each this.errors as |error|}}
  <AuHelpText @error={{"error"}}>{{error.resultMessage}}</AuHelpText>
{{/each}}

